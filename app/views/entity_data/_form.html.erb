<div class='container'>
  <%= render :partial => "shared/top_menu" %>
  <div class='span-24'>

<h3>Profile</h3>

<%= form_for(@entity_datum) do |f| %>
  <% if @entity_datum.errors.any? %>
    <div id="error_explanation">
      <h4 style='color:red'><%= pluralize(@entity_datum.errors.count, "error") %> prohibited this profile from being saved:</h4>

      <ul>
      <% @entity_datum.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="span-12">
  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label "Nick" %><br />
    <%= f.text_field :nick %>
  </div>
</div>
<div class="span-12 last">
  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
</div>
<div class="span-12">
  <div class="field">
    <%= f.label "Date of birth (YYYY-MM-DD)" %><br />
    <%= f.text_field :dob_yyyy, :size => 4 %> - 
    <%= f.text_field :dob_mm, :size => 2 %> - 
    <%= f.text_field :dob_dd, :size => 2 %>
  </div>
</div>
<div class="span-12 last">
</div>
<div class="span-12">
  <div class="field">
    <%= f.label :address_1 %><br />
    <%= f.text_field :address_1 %>
  </div>
  <div class="field">
    <%= f.label :address_2 %><br />
    <%= f.text_field :address_2 %>
  </div>
  <div class="field">
    <%= f.label :address_3 %><br />
    <%= f.text_field:address_3 %>
  </div>
</div>
<div class="span-12 last">
  <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :state %><br />
    <%= f.text_field :state %>
  </div>
  <div class="field">
    <%= f.label :country %><br />
    <%= f.text_field :country %>
  </div>
</div>
<div class="span-12">
  <div class="field">
    <%= f.label "Credit Card No." %><br />
    <%= f.text_field :credit_card_no_1, :size => 4 %> - 
    <%= f.text_field :credit_card_no_2, :size => 4 %> - 
    <%= f.text_field :credit_card_no_3, :size => 4 %> - 
    <%= f.text_field :credit_card_no_4, :size => 4 %>
  </div>
  <div class="field">
    <%= f.label :credit_card_ccv %><br />
    <%= f.text_field :credit_card_ccv, :size => 3 %>
  </div>
</div>
<div class="span-12 last">
  <div class="field">
    <%= f.label "Credit Card Expiry (mm-yyyy)" %><br />
    <%= f.text_field :credit_card_exp_mm, :size => 2 %> - 
    <%= f.text_field :credit_card_exp_yyyy, :size => 4 %>
  </div>
</div>
<div class='span-12'>
   <b>New Password</b><br/><input type='password' id='new_password' name='new_password' size='15'/><br/>
   <b>Confirm New Password</b><br/><input type='password' id='new_password_confirmation' name='new_password_confirmation' size='15'/>
  <div class="actions">
    <%= f.submit "Update Profile" %>
  </div>
</div>
<div class='span-12 last'>
   <b>Password</b><br/>
   <input type='password' id='password' name='password' size='15'/>
</div>
<% end %>

  </div>
</div>
